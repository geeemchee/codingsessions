<%- include('../includes/head.ejs') %>
<link rel="stylesheet" href="/public/css/forms.css">
<link rel="stylesheet" href="/public/css/product.css">
</head>

<body>
    <main>
        <form class="product-form" action="/people" method="POST">
            <div class="form-control">
                <label for="title">Name List</label>
                <input type="text" name="name" id="name">
            </div>
            <button class="btn" type="submit">Add name</button>
        </form>

        <% if (ppl.length > 0) { %>
        <div>
            <% ppl.forEach(p => { %>

            <h1><%= p.name %></h1>
            <form action="/delete-people" method="POST">
                <input type="hidden" value="<%= p.id %>" name="name">
                <button class="btn danger" type="submit">Delete</button>
            </form>

            <% }) %>

            <% } else { %>
            <h1>No people Found!</h1>
            <% } %>
        </div>
    </main>
    <%- include('../includes/end.ejs') %>